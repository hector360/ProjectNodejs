<%- layout('layouts/main') %>
<style>
    .contServicio{
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .contServicio .centrador{
        width: 50%;
        padding-top: 2vw;
    }
    .contServicio .centrador .contIcon{
        margin: 2vw 0;
    }
    .contServicio .centrador .contIcon a{ 
        font-size: 24px;
        padding: 0 2vw;
        background: #77C33D;
        color: #fff;
        border-radius: 10px;
    }
    .contServicio .centrador .contIcon a:hover{ 
        background: #62A52E;
    }
    .contServicio .centrador form{
        width: 100%;
        height: 100%;
    }
    .contServicio .centrador form .contInput{
        width: 100%;
        margin: 1vw 0;
        display: flex;
    }
    .contServicio .centrador form .contInput input{
        width: 100%;
        padding: 1vw;
        box-sizing: border-box;
    }
    .contServicio .centrador form .contInput .contenedor{
        width: 100%;
        position: relative;
    }
    .contServicio .centrador form .contInput .contenedor .signoDinero{
        position: absolute;
        left: 10px;
        top: 12px;
    }
    .contServicio .centrador form .contInput .contenedor input{
        padding-left: 4vw;
    }
    
    .contServicio .centrador form .contInput button{
        /* width: 100%; */
        padding: 1vw 3vw;
        background: cornflowerblue;
        border: none;
        color: #fff;
    }
    .contServicio .centrador form .contInput .tiempo{
        width: 45%;
        padding: 1vw;
        box-sizing: border-box;
    }
    .contServicio .centrador form .contInput select{
        width: 45%;
        padding: 1vw;
        box-sizing: border-box;
    }
</style>
<div class="contServicio">
    <div class="centrador">
        <div class="contIcon">
            <a href="/servicios"><i class="fa fa-long-arrow-left"></i></a>
        </div>
        <form action="/editarServicio" method="POST"> 
            <div id="contHidden">

            </div>
            <h2>Nombre:</h2>
            <div class="contInput" id="contNombreServicio">
                
            </div>
            <h2>Precio:</h2>
            <div class="contInput" id="contPrecio">
                
            </div>
            <h2>Tiempo Servicio:</h2>
            <div class="contInput seccionTiempo" id="contTiempo">
                
            </div>
            <h2>Descripcion:</h2>
            <div class="contInput" id="contDescripcion">
                
            </div>
            <div class="contInput">
                <button type="submit">Enviar</button>
            </div>
        </form>
    </div>
    
</div>
