<%- layout('layouts/main') %>
<style>
    @media (max-width: 450px){
        .cont-principal .centrador{
            width: 90%;
            margin: 0 auto;
        }
        .cont-principal .centrador form{
            width: 100%;
        }
    }
</style>
<div class="cont-principal">
    <div class="centrador">
        <form>
            <div class="cont-seccion">
                <h2>Nombre del Usuario</h2>
                <input type="text" autocomplete="off" id="nombres" name="nombres" />
            </div>
            <div class="cont-seccion">
                <h2>Apellidos del Usuario</h2>
                <input type="text" autocomplete="off" id="apellidos" name="apellidos" />
            </div>
            <div class="cont-seccion">
                <h2>Email</h2>
                <input type="text" id="email" name="email" autocomplete="off" />
            </div>
            <div class="cont-seccion">
                <h2>Celular</h2>
                <input type="text" id="celular" name="celular" autocomplete="off" />
            </div>
            <div class="cont-seccion">
                <h2>Tipo Usuario</h2>
                <input type="text" id="idTipoUsuario" name="idTipoUsuario" value="Empleado" disabled />
            </div>
            <div class="cont-seccion">
                <h2>Contrase√±a</h2>
                <input type="password" id="password" name="password" autocomplete="off" />
            </div>
            
            <div class="cont-seccion">
                <div class="botonEnvio" onclick="MagicPlanet.MisScripts.crearUsuario()">Enviar</div>
            </div>
        </form>
    </div>
</div>

