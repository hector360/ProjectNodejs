<%- layout('layouts/main') %>
<style>
    .contCrearServicios{
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .contCrearServicios .centrador{
        width: 50%;
        padding-top: 2vw;
    }
    .contCrearServicios .centrador .contIcon{
        margin: 2vw 0;
    }
    .contCrearServicios .centrador .contIcon a{ 
        font-size: 24px;
        padding: 0 2vw;
        background: #77C33D;
        color: #fff;
        border-radius: 10px;
    }
    .contCrearServicios .centrador .contIcon a:hover{ 
        background: #62A52E;
    }
    .contCrearServicios .centrador form{
        width: 100%;
        height: 100%;
    }
    .contCrearServicios .centrador form .contInput{
        width: 100%;
        margin: 1vw 0;
        display: flex;
    }
    .contCrearServicios .centrador form .contInput input{
        width: 100%;
        padding: 1vw;
        box-sizing: border-box;
    }
    .contCrearServicios .centrador form .contInput button{
        /* width: 100%; */
        padding: 1vw 3vw;
        background: cornflowerblue;
        border: none;
        color: #fff;
    }
    .contCrearServicios .centrador form .contInput .tiempo{
        width: 45%;
        padding: 1vw;
        box-sizing: border-box;
    }
    .contCrearServicios .centrador form .contInput select{
        width: 45%;
        padding: 1vw;
        box-sizing: border-box;
    }
</style>
<div class="contCrearServicios">
    <div class="centrador">
        <div class="contIcon">
            <a href="/tipoServicios"><i class="fa fa-long-arrow-left"></i></a>
        </div>
        <form action="/createTipoServicios" method="POST"> 

            <h2>Nombre Tipo Servicio:</h2>
            <div class="contInput">
                <input type="text" name="nombre" id="nombre" />
            </div>
            <h2>Descripcion:</h2>
            <div class="contInput">
                <input class="tiempo" type="text" name="descripcion" id="descripcion" />
            </div>
            
            <div class="contInput">
                <button>Enviar</button>
            </div>
        </form>
    </div>
</div>