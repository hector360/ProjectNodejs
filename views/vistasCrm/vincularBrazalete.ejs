<%- layout('layouts/main') %>
<style>
    .centrador{
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .centrador .contBotonScanner{
        width: 100px;
        height: 100px;
        background: green;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .centrador .contBotonScanner .boton{
        width: 90px;
        height: 90px;
        background: #CE4444;
        border-radius: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        font-size: 20px;
        color: #fff;
        font-family: sans-serif;
    }

    .cont-input{
        width: 100%;
        display: flex;
        justify-content: space-between;
        margin: 10px 0;
    }
    form{
        width: 60%;
        margin: 0 auto;
    }
    .cont-input .caja{
        width: 80%;
        border: 1px solid #000;
        padding: 15px;
    }
    .cont-input .boton{
        padding: 15px;
        background: burlywood;
        color: #fff;
        width: 18%;
    }
    .cont-input input{
        padding: 15px;
        width: 80%;
    }
    .cont-input select{
        width: 100%;
        padding: 15px;
    }

    .contCamera{
        width: 500px;
        height: 500px;
        margin: 0 auto;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    #qr-shaded-region{
        border-color: rgba(0, 0, 0, 0) !important;
        width: 100% !important;
        height: 100% !important;
        border-width: 120.5px 118px !important;
    }
</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<div id="reader" class="contCamera"></div>
