<script>
    $(document).ready(function() {
        const current_url = new URL(window.location.href);
        const search_params = current_url.searchParams;
        const id = search_params.get('id');
        $('#cont-boton-regresar').html(`<a href="/seleccionar-compra?id=${id}"><i class="fa fa-arrow-left"></i> Regresar</a>`)
        MagicPlanet.MiSistema.traerProductosCarro2(id);
        MagicPlanet.MiSistema.traerCarrito(id);
        localStorage.setItem("tarjetas", [])
        localStorage.setItem("carrito", [])
        localStorage.setItem("horas_tarjeta", 0)
    } );
    
</script>