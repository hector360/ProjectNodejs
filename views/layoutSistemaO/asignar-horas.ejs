<%- layout('layouts/layoutSistemaO') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6" id="regresar"></div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="card earning-card">
                <div class="card-body p-3">
                    <h2>Asigna tarjeta de horas a membresia de niños</h2>
                    <div class="col-md-12">
                        <div class="cont-tarjetas" id="cont-tarjetas">

                        </div>
                        <div class="cont-nombres" id="cont-nombres">
                            
                        </div>
                        <h2>Membresias de niños</h2>
                        <div class="row mt-4" id="cont-membresias">
                
                        </div>
                        <div class="cont-boton mt-3">
                            <button class="btn btn-lg btn-block btn-primary btn-control" onclick="MagicPlanet.MiSistema.vincularHoras()">Vincular</button>
                        </div>
                    </div>
                </div>
            </div>
        
        
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        const current_url = new URL(window.location.href);
        const search_params = current_url.searchParams;
        const id = search_params.get('id');
        var htmlnombres = '';

        htmlnombres +=
        `<div class="col-md-6">
        <a href="/crear-ninos?id=${id}" class="btn btn-primary btn-control"><i class="fas fa-child"></i> Crea un niño nuevo</a>
        </div>`;
        $('#cont-nombres').html(htmlnombres);

        htmlregresar = `
            <a href="/seleccionar-compra?id=${id}" class="btn btn-warning btn-regresar"><i class="fa fa-arrow-left"></i> Regresar</a>
        `;
        $('#regresar').html(htmlregresar);

        MagicPlanet.MiSistema.traerTarjetasHoras(id);
        MagicPlanet.MiSistema.traerNinos(id);
        
    } );
    
</script>