<%- layout('layouts/layoutSistemaO') %>
<style>
    
</style>
<div class="col-xl-8 xl-100 dashboard-sec box-col-12 pt-4">
    <a href="/seleccionar-usuario" class="btn btn-warning btn-regresar"><i class="fa fa-arrow-left"></i> Regresar</a>
    <div class="card earning-card mt-4">
        <div class="card-body p-3">
            <div class="row m-0">

                <form class="col-md-6">
                    <h2 class="subtitulo">Buscar a cliente registrado</h2>
                    <div class="cont-error" id="cont-error">
        
                    </div>
                    <div class="form-group col-md-12">
                        <label>Correo del usuario</label>
                        <input type="text" name="correo" id="correo" class="form-control" />
                    </div>
                    <div class="form-group col-md-12 mt-4">
                        <button id="botonBuscarUsuario" class="btn btn-primary btn-lg btn-control">Buscar Usuario</button>
                    </div>
                    <div class="form-group col-md-12 mt-4">
                        <a href="/camera?ruta=usuario-existente" class="btn btn-primary btn-lg btn-control">Escanear Codigo QR</a>
                    </div>
                    
                    
                </form>
                <div class="col-md-12" id="caja-resultado"></div>
                <div class="col-md-12 mt-5">
                    <div id="cont-botonSiguiente"></div>
                </div>
                
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        const current_url = new URL(window.location.href);
        const search_params = current_url.searchParams;
        const id = search_params.get('id');
        console.log("id")
        console.log(id)
        if(id != null){
            console.log("se mostrara el usuario")
            MagicPlanet.MiSistema.traerUsuarioFromIdP(id);
        }
        var botonBuscarUsuario = document.getElementById("botonBuscarUsuario");

        botonBuscarUsuario.addEventListener("click", (event)=> {
            event.preventDefault();
            MagicPlanet.MiSistema.traerUsuario();
        });
        
        
        
    } );
    
</script>

