<%- layout('layouts/eventoLayout') %>
<style>
    html, body{
        width: 100% !important;
        height: 100% !important;
    }
    .cont-principal{
        padding-top: 100px;
        width: 100% !important;
        height: 100% !important;
    }
    .cont-principal .centrador{
        width: 80%;
        height: 100%;
        margin: 0 auto;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .form{
        width: 100%;
    }
    .cont-principal .centrador .cont-input{
        width: 100%;
    }
    .cont-principal .centrador .cont-input input{
        width: 100%;
    }
    .error{
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
        padding: 10px;
        border-radius: 8px;
        margin: 5px 0;
    }
    .cont-input button{
        background: coral;
        color: #fff;
        font-size: 20px;
        border: none;
        border-radius: 10px;
        width: 100%;
        padding: 10px;
    }
</style>
<div class="cont-principal">
    <div class="centrador">
        <form action="/logincrm-evento" method="POST">
            <%if (signinMessage != "") {%>
                <p class="error"><%= signinMessage %></p>
            <% } %>
            <div class="cont-input">
                <input type="text" name="email" id="email" placeholder="Correo" />
            </div>
            <div class="cont-input">
                <input type="password" name="password" id="password" placeholder="ContraseÃ±a" />
            </div>
            <div class="cont-input">
                <button>Entrar</button>
            </div>
        </form>
            
            
    </div>
</div>