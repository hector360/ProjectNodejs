
<%- layout('layouts/layoutInicioSesion') %>


<div class="container-fluid">
  <div class="row">
    <div class="col-sm-7 col-md-7">
      <img class="bg-img-cover bg-center" src="/img/descubre.jpeg" alt="looginpage">
    </div>
    <div class="col-sm-5 col-md-5 p-0 login">
      <div class="contLogo">
          <img class="img-fluid logoLogin" src="/uploads/LogoMagicPlanet-426-a27.jpg" alt="looginpage">
      </div>
      <div class="login-main"> 
        <%if (signinMessage != "") {%>
            <p class="error"><%= signinMessage %></p>
        <% } %>
        <form class="theme-form" action="/logincrm" method="POST">
          <h4>Ingresar al sistema</h4>
          <div class="form-group">
            <label class="col-form-label">Usuario (email)</label>
            <input name="email" class="form-control" type="email" required="" placeholder="Test@gmail.com">
          </div>
          <div class="form-group">
            <label class="col-form-label">Contrase√±a</label>
            <input class="form-control" type="password" name="password" required="" placeholder="*********">
          </div>
          <div class="form-group mb-0 mt-4">
            <!--<div class="checkbox p-0">
              <input id="checkbox1" type="checkbox">
              <label class="text-muted" for="checkbox1">Remember password</label>
            </div>-->
            <button class="btn btn-primary btn-block" type="submit">Ingresar</button>
          </div>
          <!--<p class="mt-4 mb-0">Don't have account?<a class="ml-2" href="sign-up.html">Create Account</a></p>-->
        </form>
      </div>
    </div>
  </div>
</div>